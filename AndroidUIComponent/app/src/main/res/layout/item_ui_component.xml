<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightSmall"
    android:background="@android:color/white"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tv_label_component_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Component Name : "
        android:textSize="16sp"
        android:textColor="#3bafda"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_component_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Popup Window"
        android:textSize="16sp"
        android:textColor="#003663"
        android:fontFamily="sans-serif"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_label_component_title"/>

</android.support.constraint.ConstraintLayout>