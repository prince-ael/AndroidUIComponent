<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.nahidul.androiduicomponent.PopupActivity">

    <Button
        android:id="@+id/btn_popup_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop Up Window"
        android:textSize="14sp"
        android:textColor="#003663"
        android:onClick="showPopupWindow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/tv_cp_notes1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abcd Efghi Jklmn Opqr stuv"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_popup_window"/>

    <CheckBox
        android:id="@+id/cb_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Say, Hello"
        android:textColor="@color/check_box_selector"
        android:enabled="false"
        android:theme="@style/checkbox_theme"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/iv_test1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_preview"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_color_filter"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_test1"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
