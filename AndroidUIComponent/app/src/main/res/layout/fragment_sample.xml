<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.demo.nahidul.androiduicomponent.fragments.SampleFragment">

    <TextView
        android:id="@+id/tv_control_panel"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#e6e9ed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_btn_index_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/art_index_table"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_control_panel"
        app:layout_constraintBottom_toBottomOf="@+id/tv_control_panel"
        app:layout_constraintRight_toRightOf="@+id/tv_control_panel"/>

    <ImageView
        android:id="@+id/iv_btn_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/art_msg"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/tv_control_panel"
        app:layout_constraintBottom_toBottomOf="@+id/tv_control_panel"
        app:layout_constraintRight_toLeftOf="@id/iv_btn_index_table"/>

    <ImageView
        android:id="@+id/iv_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/tv_control_panel"
        app:layout_constraintBottom_toBottomOf="@+id/tv_control_panel"
        app:layout_constraintRight_toLeftOf="@id/iv_btn_message"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_sample"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_control_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>
